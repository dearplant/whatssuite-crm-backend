# Production Environment Configuration
# DO NOT commit this file to version control
# Use secrets management system (AWS Secrets Manager, HashiCorp Vault, etc.)

# Application
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://app.whatsapp-crm.com

# Database (Use managed PostgreSQL service)
DATABASE_URL=postgresql://username:password@prod-db-host:5432/whatsapp_crm_prod?schema=public&sslmode=require
POSTGRES_USER=username
POSTGRES_PASSWORD=strong-password
POSTGRES_DB=whatsapp_crm_prod
POSTGRES_PORT=5432

# Redis (Use managed Redis service)
REDIS_HOST=prod-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=very-strong-redis-password

# JWT Secrets (Use cryptographically secure random strings!)
JWT_SECRET=production-jwt-secret-min-64-chars-use-secrets-manager
JWT_REFRESH_SECRET=production-jwt-refresh-secret-min-64-chars-use-secrets-manager
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=production-sendgrid-api-key
SMTP_FROM=noreply@whatsapp-crm.com
SMTP_FROM_NAME=WhatsApp CRM

# SendGrid
SENDGRID_API_KEY=production-sendgrid-api-key

# AWS S3 Configuration (Production)
AWS_ACCESS_KEY_ID=production-aws-access-key
AWS_SECRET_ACCESS_KEY=production-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=whatsapp-crm-production

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Encryption (Use strong key from secrets manager)
ENCRYPTION_KEY=production-encryption-key-64-chars-min-use-secrets-manager

# Sentry (Error Tracking)
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WhatsApp
WHATSAPP_SESSION_PATH=./sessions

# AI Providers (Production keys)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
COHERE_API_KEY=
OLLAMA_BASE_URL=

# Meta Cloud API (Production)
META_APP_ID=
META_APP_SECRET=
META_WEBHOOK_VERIFY_TOKEN=
META_REDIRECT_URI=https://app.whatsapp-crm.com/api/v1/whatsapp/cloud-api/callback

# Shopify (Production)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# Payment Gateways (Production)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Logging
LOG_LEVEL=warn
LOG_FILE_PATH=./logs

# Bull Queue
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=very-strong-password-change-me

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=whatsapp-crm-backups
BACKUP_RETENTION_DAYS=90
