# Development Environment Configuration
# DO NOT commit this file to version control

# Application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_crm_dev?schema=public
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=whatsapp_crm_dev
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Development - Use Mailtrap or similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASSWORD=your-mailtrap-password
SMTP_FROM=noreply@whatsapp-crm.dev
SMTP_FROM_NAME=WhatsApp CRM Dev

# SendGrid (Alternative)
SENDGRID_API_KEY=

# AWS S3 Configuration (Development)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=whatsapp-crm-dev

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Encryption
ENCRYPTION_KEY=dev-encryption-key-32-chars-min

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WhatsApp
WHATSAPP_SESSION_PATH=./sessions

# AI Providers (Optional - for testing)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
COHERE_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434

# Meta Cloud API (Optional)
META_APP_ID=
META_APP_SECRET=
META_WEBHOOK_VERIFY_TOKEN=
META_REDIRECT_URI=http://localhost:5000/api/v1/whatsapp/cloud-api/callback

# Shopify (Optional)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# Payment Gateways (Optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Bull Queue
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin123
