# Staging Environment Configuration
# DO NOT commit this file to version control

# Application
NODE_ENV=staging
PORT=5000
FRONTEND_URL=https://staging.whatsapp-crm.com

# Database
DATABASE_URL=postgresql://username:password@staging-db-host:5432/whatsapp_crm_staging?schema=public
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=whatsapp_crm_staging
POSTGRES_PORT=5432

# Redis
REDIS_HOST=staging-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=strong-redis-password

# JWT Secrets (Use strong secrets!)
JWT_SECRET=staging-jwt-secret-min-32-chars-change-me
JWT_REFRESH_SECRET=staging-jwt-refresh-secret-min-32-chars-change-me
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Staging - Use real SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@whatsapp-crm.com
SMTP_FROM_NAME=WhatsApp CRM Staging

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS S3 Configuration (Staging)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=whatsapp-crm-staging

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Encryption
ENCRYPTION_KEY=staging-encryption-key-32-chars-min-change-me

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WhatsApp
WHATSAPP_SESSION_PATH=./sessions

# AI Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
COHERE_API_KEY=
OLLAMA_BASE_URL=

# Meta Cloud API
META_APP_ID=
META_APP_SECRET=
META_WEBHOOK_VERIFY_TOKEN=
META_REDIRECT_URI=https://staging.whatsapp-crm.com/api/v1/whatsapp/cloud-api/callback

# Shopify
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# Payment Gateways
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Bull Queue
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=change-me-strong-password
