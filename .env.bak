# Application
NODE_ENV=development
PORT=4000
API_VERSION=v1
APP_NAME=WhatsApp CRM Backend
APP_URL=http://localhost:4000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_crm?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
